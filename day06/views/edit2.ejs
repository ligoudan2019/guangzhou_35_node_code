<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Hero - Admin</title>
    <link rel="stylesheet" href="../assets/css/bootstrap.css">
    <style>
        .hero-list img {
            width: 50px;
        }
    </style>
</head>

<body>
    <header>
        <div class="page-header container">
            <h1>王者荣耀 <small>英雄管理器</small></h1>
        </div>
    </header>
    <div class="container hero-list">
        <form id="form">
            <input type="hidden" id="id" name='id' value="<%=id%>">
            <input type="hidden" name="img" id="headSrc" value="<%=img%>">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td>姓名：</td>
                        <td><input type="text" id="name" name="name" value="<%=name%>"></td>
                    </tr>
                    <tr>
                        <td>性别：</td>
                        <td>
                            <% if(gender == '男') { %>
                                <input id="nan" name="gender" value="男" type="radio" checked><label for="nan">男</label>
                            <input name="gender" value="女" type="radio" id="nv"><label for="nv">女</label>
                            <% }else { %>
                                <input id="nan" name="gender" value="男" type="radio"><label for="nan">男</label>
                            <input name="gender" value="女" checked type="radio" id="nv"><label for="nv">女</label>
                            <% } %>
                            
                        </td>
                    </tr>
                    <tr>
                        <td>头像：</td>
                        <td><img src="../assets/image/0.jpg" alt="" id="photo" width="100">
                            <input type="file" id="img"></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="button" class="btn btn-primary" id="sub" value="完成"></td>
                    </tr>
                </tbody>
            </table>
        </form>
    </div>

</body>
<script src="../assets/js/jquery.js"></script>
</html>